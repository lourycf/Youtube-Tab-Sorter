{
  "manifest_version": 3,
  "name": "YouTube Tab Sorter",
  "version": "1.0",
  "description": "Sorts YouTube video tabs by video length.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}